{
    "name": "evyex/doctrine-orm-extender",
    "description": "Extension for Doctrine ORM.",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Evyex\\DoctrineOrmExtender\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Evgen Yurchenko",
            "email": "evgenijvy@gmail.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "doctrine/orm": "^2.10|^3.0"
    },
    "scripts": {
        "cs-fix": "php-cs-fixer fix",
        "cs-check": "php-cs-fixer fix --dry-run",
        "stan-check": "phpstan analyse",
        "pipeline": [
            "@cs-fix",
            "@stan-check",
            "@composer audit --abandoned=ignore"
        ]
    },
    "require-dev": {
        "phpunit/phpunit": "^12.5",
        "phpstan/phpstan": "^2.1",
        "friendsofphp/php-cs-fixer": "^3.93"
    }
}
